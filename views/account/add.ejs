<div id="add-main">
  <div id="addTitle">
    <h1>Create a new account</h1>
  </div>
  <form method="post" action="/account/add">
    <div>
      <label>Account Name</label><br>
      <input name="accountName" type="text" />
    </div>

    <div class="form-group">
      <label>Account Number</label><br>
      <input name="accountNumber" type="text" id="anumber" readonly />
    </div>

    <div class="form-group">
      <label>Currency</label><br>
      <!-- BHD, USD, GBP -->
      <select name="currency">
        <option>BHD</option>
        <option>USD</option>
        <option>GBP</option>
      </select>
    </div>

    <div class="form-group">
      <label>Balance</label><br>
      <input name="balance" type="number" />
    </div>

    <br />
    <div>
      <button type="submit">Create Account</button>
    </div>
  </form>
</div>