<h1>Don't do it again.</h1>
<form action="/auth/forget" method="POST">
  <div class="form-row">
    <label for=email>Email</label>
    <input autocorrect="off" autocomplete="off" autocapitalize="off"
    type=text name=email />
    <br>
    <label for="recoveryKey">Recovery Key</label>
    <input type="text" id="recoveryKey" name=recoveryKey />
  </div>
  <div>
    <label for=password>New Password</label>
    <input type=password name=password />
    <br>
  </div>
  <button>Reset Password</button>
</form>

